pipeline {
	  agent { docker { image 'python:3.8.2' } }
	  triggers {
	  	githubPush()
	  }
	  stages {
	    stage('build') {
	      steps {
	          withEnv(["HOME=${env.WORKSPACE}"]) {
	            sh 'pip install -r requirements.txt --user'
	            }
	      }
	    }
	     stage('test') {
	      steps {
	         withEnv(["HOME=${env.WORKSPACE}"]){
	            sh 'python manage.py test homepage.tests' 
		    sh 'python -m pyflakes blog/'
		    sh 'python -m pyflakes users/'
		    sh 'python -m pyflakes homepage/'
	         }
	      }
	      post {
	        success {
		  echo "Test succeed"
		  mail to: 'group9831@gmail.com',
     		  subject: "Pipeline has succeed: ${currentBuild.fullDisplayName}",
		  body: "The pipeline ${currentBuild.fullDisplayName} completed successfully."
	        }
	        failure {
		  echo "Test failed"
		  mail to: 'group9831@gmail.com',
     		  subject: "Pipeline has failed: ${currentBuild.fullDisplayName}",
     		  body: "Error in ${env.BUILD_URL}"
	        }   
	    }
	   }
	   stage('Performance tests') {
            steps {
                echo "-=- execute performance tests -=-"
                sh "locust -f ./perf_test/locustfile.py --no-web -c 1000 -r 100 --run-time 1m -H http://172.18.0.3:5001"
             }
           }
	  }
	}
